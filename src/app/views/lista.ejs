<script src="/base64/base64.js"></script>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">nome</th>
            <th scope="col">email</th>
            <th scope="col">cpf</th>
            <th scope="col">data nascimento</th>
            <th scope="col">deletar</th>
            <th scope="col">editar</th>
        </tr>
    </thead>
    <tbody>
        <% if (usuarios.length > 0) { %>

            <% usuarios.forEach(usuario=> { %>

                <tr>
                    <td scope="row"><%= usuario.id %> </td>
                    <td><%= usuario.nome %></td>
                    <td><%= usuario.email %></td>
                    <td><%= usuario.cpf %></td>
                    <td><%= usuario.data_nascimento %></td>
                    <td><button onclick="deletar('<%= usuario.id %>' , '<%= usuario.nome %>')" class="btn text-light btn-danger nav-link p-1"> del </button></td>
                    <td><button onclick="editar('<%= usuario.id %>')" class="btn text-light btn-warning nav-link p-1"> edit </button></td>
                </tr>

                <% }) %>

        <% } else { %>

            <span>Sem ususarios cadastrados</span>

        <% } %>
    </tbody>
</table>

<script src="/public/js/links.js"></script>